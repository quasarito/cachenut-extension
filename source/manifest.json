{
  "manifest_version": 2,
  "name": "Cache Nut",
  "version": "0.1.0",

  "icons": {
    "16": "assets/icons/cachenut-acorn-16.png",
    "32": "assets/icons/cachenut-acorn-32.png",
    "48": "assets/icons/cachenut-acorn-48.png",
    "96": "assets/icons/cachenut-acorn-96.png",
    "128": "assets/icons/cachenut-acorn-128.png"
  },
  "description": "Clipboard across browsers",
  "homepage_url": "https://cachenut.com",
  "short_name": "Cache Nut",

  "permissions": [
    "activeTab",
    "bookmarks",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "storage"
  ],

  "content_security_policy": "script-src 'self'; object-src 'self'",

  "__chrome|firefox__author": "cachenut",
  "__opera__developer": {
    "name": "cachenut"
  },

  "__firefox__applications": {
    "gecko": {
      "id": "extension@cachenut.com"
    }
  },

  "__chrome__minimum_chrome_version": "88",
  "__opera__minimum_opera_version": "36",

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/cachenut-acorn-16.png",
      "32": "assets/icons/cachenut-acorn-32.png",
      "48": "assets/icons/cachenut-acorn-48.png",
      "96": "assets/icons/cachenut-acorn-96.png",
      "128": "assets/icons/cachenut-acorn-128.png"
    },
    "default_title": "Cache Nut",
    "__chrome|opera__chrome_style": false,
    "__firefox__browser_style": false
  },

  "__chrome|opera__options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true,
    "__chrome__chrome_style": false
  },

  "background": {
    "scripts": [
      "js/background.bundle.js"
    ],
    "__chrome|opera__persistent": false
  }
}